<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="1.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.6"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.7"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline9"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.85"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline10"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.55"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline11"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.4"/>
    <Button
            android:text="@string/number_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/number_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline10" app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/number_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_3" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline11"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline10"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="@string/number_4"/>
    <Button
            android:text="@string/number_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/number_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="@string/number_7"/>
    <Button
            android:text="@string/number_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/number_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_point" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="@string/point"/>
    <Button
            android:text="@string/number_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_number_0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_equals" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button_number_0"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/operation_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_operation_add" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline4"
    />
    <Button
            android:text="@string/operation_sub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_operation_sub" app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/operation_mul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_operation_mul" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline4"
    />
    <Button
            android:text="@string/operation_div"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_operation_div" app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/clear_c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_clear_c" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/clear_ce"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_clear_ce" app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/number_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_entry" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="textEnd" android:textStyle="bold" android:textSize="65sp"/>
    <TextView
            android:text="@string/number_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_last_result" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="65sp" android:textAlignment="viewEnd" android:textStyle="bold"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/backspace"
            android:id="@+id/button_backspace" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
</android.support.constraint.ConstraintLayout>