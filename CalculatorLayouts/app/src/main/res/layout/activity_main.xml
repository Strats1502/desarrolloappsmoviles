<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 + 7 = 9"
        android:layout_alignParentEnd="true" android:layout_margin="10dp" android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0000000"
        android:textSize="60sp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="5">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="x" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="=" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:weightSum="4">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="3" android:layout_weight="1">
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="1" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="2" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="3" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="3" android:layout_weight="1">
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="4" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="5" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="6" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="3" android:layout_weight="1">
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="7" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="8" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="9" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="3" android:layout_weight="1">
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="." android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="0" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:text="=" android:layout_weight="1"
                    tools:ignore="ButtonStyle"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>